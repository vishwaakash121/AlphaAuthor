<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' , obj: @comment %>
      <%= form_with(model: @comment, class: "shadow p-3 mb-3 bg-info rounded" , local: true) do |f|%>
        <div class="form-group row mt-2">
          <div class="col">
            <%= f.text_area :comment, rows: 5, class: "form-control shadow rounded" , placeholder: "Enter comment..."
                %>
          </div>
          <%= hidden_field_tag 'post_id' , @post_id %>
        </div>
        <div class="text-center mt-3">
          <%= f.submit "Save" , class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-3 mb-3">
      <%= link_to "[ Cancel and return to posts listing ]" , posts_path, class: "text-info" %>
    </div>
  </div>
</div>
