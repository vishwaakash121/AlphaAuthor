<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @post %>
      <%= form_with(model: @post, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f|%>
        <div class="form-group row mt-2">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of post" %>
          </div>
        </div>
        <div class="form-group row mt-2">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of post" %>
          </div>
        </div>
        <div class="text-center mt-3">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-3 mb-3">
      <%= link_to "[ Cancel and return to posts listing ]", posts_path, class: "text-info" %>
    </div>
  </div>
</div>
